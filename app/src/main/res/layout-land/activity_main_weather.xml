<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87ceeb"
    android:columnCount="2"
    tools:context="com.example.abhilashk.myweatherapp.MainWeatherActivity">

    <TextView
        android:id="@+id/cityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:textSize="30sp"
        android:layout_column="0"
        android:layout_row="0"
        android:textColor="#fff" />

    <ImageView
        android:id="@+id/iconThumb"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:layout_column="0"
        android:layout_row="1"
        />

    <TextView
        android:id="@+id/condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:text="Condition"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="80dp"
        android:textColor="#fff"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_column="0"
        android:layout_row="2"
        android:textSize="20sp" />



    <TextView
        android:id="@+id/temperatureCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:textSize="60sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:layout_column="1"
        android:layout_row="0"
        android:text="12 Degress"/>
    <TextView
        android:id="@+id/windCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="wind"
        android:textColor="#fff"
        android:layout_column="1"
        android:layout_row="1"
        />

     <TextView
        android:id="@+id/humidityCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="10dp"
         android:layout_marginLeft="100dp"
        android:text="Humidity"
        android:textColor="#fff"
         android:layout_column="1"
         android:layout_row="2"
        />

    <TextView
        android:id="@+id/sunrise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="100dp"
        android:text="sunrise"
        android:textColor="#fff"
        android:layout_column="1"
        android:layout_row="3"
        />

    <TextView
        android:id="@+id/sunset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="100dp"
        android:text="sunset"
        android:textColor="#fff"
        android:layout_column="1"
        android:layout_row="4"
        />

</GridLayout>
